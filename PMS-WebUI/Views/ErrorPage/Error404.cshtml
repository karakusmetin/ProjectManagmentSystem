@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Sayfa Bulunamadı</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <div class="error-content">
            <h1 class="error-code">404</h1>
            <p class="error-message">Aradığınız sayfa bulunamadı.</p>
            <a href="/" class="home-button">Ana Sayfaya Dön</a>
        </div>
    </div>
</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Roboto', sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    /* Container */
    .container {
        text-align: center;
        padding: 20px;
    }

    /* Error Content */
    .error-content {
        max-width: 600px;
        padding: 40px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    /* Error Code */
    .error-code {
        font-size: 6rem;
        font-weight: 700;
        color: #ff6b6b;
        margin-bottom: 20px;
    }

    /* Error Message */
    .error-message {
        font-size: 1.5rem;
        margin-bottom: 30px;
    }

    /* Home Button */
    .home-button {
        display: inline-block;
        padding: 15px 30px;
        font-size: 1rem;
        font-weight: 700;
        color: #fff;
        background: #007bff;
        border-radius: 5px;
        text-decoration: none;
        transition: background 0.3s ease;
    }

        .home-button:hover {
            background: #0056b3;
        }

</style>