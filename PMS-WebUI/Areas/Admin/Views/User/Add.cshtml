@model UserAddDto

<div class="admin-container">
    <div class="User-add">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" style="color:red"></div>
                        <div class="card-body">
                            <div>
                                <label asp-for="FirstName" class="form-label">Kullanıcı'nın İsmi</label>
                                <input asp-for="FirstName" type="text" class="form-control mb-2" placeholder="İsim..." aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="LastName" class="form-label">Kullanıcı'nın Soyismi</label>
                                <input asp-for="LastName" type="text" class="form-control mb-2" placeholder="Soyisim..." aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="Email" for="defaultFormControlInput" class="form-label">Kullanıcı'nın Email Adresi</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="ornek@gmail.com..." id="html5-number-input">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div>
                                <label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label">Kullanıcı'nın Telefon Numarası</label>
                                <input asp-for="PhoneNumber" class="form-control mb-2" type="tel" placeholder="538..." id="html5-datetime-local-input">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="RoleId" for="defaultFormControlInput" class="form-label">Kullanıcı'nın Rolü</label>
                                <select asp-for="RoleId" class="form-control mb-2" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                            </div>
                            <div>
                                <label asp-for="Password" for="defaultFormControlInput" class="form-label">Kullanıcı'nın Şifresi</label>
                                <input asp-for="Password" class="form-control mb-2" type="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" id="html5-datetime-local-input">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            

                            <div class="form group">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>