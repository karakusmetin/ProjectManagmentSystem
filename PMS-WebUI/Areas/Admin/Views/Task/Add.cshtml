@model TaskAddDto

<div class="admin-container">
    <div class="Project-add">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Görev Yönetimi /</span> Görev Ekle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <form asp-controller="Task" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="card-body">


                            <div>
                                <a class="btn text-primary float-lg-right" data-toggle="modal" data-target="#exampleModalCenter">
                                    Proje Ekle  <i class="bx bx-plus"></i>
                                </a>

                                <label asp-for="TaskName" class="form-label">Görev Adı</label>
                                <input asp-for="TaskName" type="text" class="form-control mb-2" placeholder="Görev Adı..." aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="TaskName" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="TaskDescription" for="defaultFormControlInput" class="form-label">Görev Açıklaması</label>
                                <textarea asp-for="TaskDescription" type="text" class="form-control mb-2" style="min-height:100px" placeholder="Görev Açıklaması..." aria-describedby="defaultFormControlHelp"></textarea>
                                <span asp-validation-for="TaskDescription" class="text-danger"></span>
                            </div>

                            <div>
                                <label asp-for="StartDate" for="defaultFormControlInput" class="form-label">Görev Başlama Tarihi</label>
                                <input asp-for="StartDate" class="form-control mb-2" type="datetime-local" value="2024-06-18T12:10:00" id="html5-datetime-local-input">
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="EndDate" for="defaultFormControlInput" class="form-label">Görev Bitiş Tarihi</label>
                                <input asp-for="EndDate" class="form-control mb-2" type="datetime-local" value="2024-06-18T12:10:00" id="html5-datetime-local-input">
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Priority" for="defaultSelect" class="form-label">Görev Önceliği</label>
                                <select asp-for="Priority" asp-items="Html.GetEnumSelectList<PriorityLevel>()" id="defaultSelect" class="form-select">
                                </select>
                            </div>
                            <div class="form group">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"> Proje Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="d-block form-label">Proje Adı</label>
                        <input class="form-control" type="text" id="projectName" />

                        <label class="d-block form-label">Proje Açıklaması</label>
                        <input class="form-control" type="text" id="projectDescription" />

                        <label class="d-block form-label">Bütçe</label>
                        <input class="form-control" type="number" id="projectBudget" />

                        <label class="d-block form-label">Başlangıç Tarihi</label>
                        <input class="form-control" type="datetime-local" id="projectStartDate" />

                        <label class="d-block form-label">Bitiş Tarihi</label>
                        <input class="form-control" type="datetime-local" id="projectEndDate" />
                        
                        <label class="d-block form-label"> Öncelik</label>
                        <select class="form-select" asp-items="Html.GetEnumSelectList<PriorityLevel>()" id="projectPriority"></select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button type="button" data-keyboard="false" class="btn btn-primary" id="btnSave">Kaydet</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/js/projectAdd.js"></script>
    <script>
        var app = app || {};
        app.Urls = app.Urls || {};

        app.Urls.baseUrl = '@Url.Content("~")';
        app.Urls.projectAddUrl = "@(Url.Action("AddWithAjax", "Project"))";
        app.Urls.taskAddUrl = "@(Url.Action("Add", "Task"))";
    </script>

}
<style>
    .form-label {
        font-weight: bold; /* Kalın font */
        color: #333; /* Metin rengi */
    }

    /* Select kutusu */
    .form-select {
        width: 100%; /* Genişlik tam olarak doldurulsun */
        padding: 0.375rem 0.75rem; /* Dolgu */
        line-height: 1.5; /* Satır yüksekliği */
        color: #495057; /* Metin rengi */
        background-color: #fff; /* Arka plan rengi */
        border: 1px solid #3e2481; /* Kenarlık */
        border-radius: 0.25rem; /* Kenar yuvarlaklığı */
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out; /* Geçiş efekti */
    }

        /* Seçenekler */
        .form-select option {
            color: #495057; /* Metin rengi */
        }

</style>